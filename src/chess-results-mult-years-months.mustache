  <script>
      // used google charts to produce my own charts of rating
      google.charts.load('44', {
          callback: drawBackgroundColor,
          packages: ['corechart']
      });
      function drawBackgroundColor() {

            /*
          var chess_to_plot = [
              [new Date('3/16/2016'), 3],
              [new Date('3/17/2016'), 5],
              [new Date('3/18/2016'), 7],
              [new Date('3/19/2016'), 9],
          ];
            */

          var chess_to_plot = [];

          var data = new google.visualization.DataTable();
          var data2 = new google.visualization.DataTable();
          var data3 = new google.visualization.DataTable();

          data.addColumn('date', 'Date');
          data.addColumn('number', 'Blitz Rating');

          data2.addColumn('date', 'Date');
          data2.addColumn('number', 'Standard Rating');

          data3.addColumn('date', 'Date');
          data3.addColumn('number', 'Rapid Rating');

          var options = {
              hAxis: {
                  title: 'Date'
              },
              vAxis: {
                  title: 'Rating'
              },
              backgroundColor: '#f1f8e9'
          };

          var chart = new google.visualization.LineChart(document.getElementById('yo'));
          var chart2 = new google.visualization.LineChart(document.getElementById('yo2'));
          var chart3 = new google.visualization.LineChart(document.getElementById('yo3'));

          data.addRows(chess_to_plot);
          chart.draw(data, options);

          // second chart
          var chess_to_plot2 = [];
          data2.addRows(chess_to_plot2);
          chart2.draw(data2, options);

          // third chart
          var chess_to_plot3 = [];
          data3.addRows(chess_to_plot3);
          chart3.draw(data3, options);
      }
  </script>


  <body>
    <div class="container">
        <div class="row justify-content-center">
            <h1>Info about player ID:{{id}}, Name: {{first_name}} {{last_name}}</h1>
        </div>

        <div class="row justify-content-center">
            <h5>Standard rating over time:</h5>
        </div>

        <div id="yo2"></div>

        <div class="row justify-content-center">
            <h5>Rapid rating over time:</h5>
        </div>

        <div id="yo3"></div>

        <div class="row justify-content-center">
            <h5>Blitz rating over time:</h5>
        </div>

        <div id="yo"></div>


        <div class="row justify-content-center">
            <h4 class="alert alert-primary" role="alert">
                Table of full info:
            </h4>
        </div>
        <div class="row justify-content-center">
          <table class="table table-striped" style="width:100%;margin:auto;">
              <thead class="thead-dark">
              <tr>
                  <th scope="col">year</th>
                  <th scope="col">month</th>
                  <th scope="col">last_name</th>
                  <th scope="col">first_name</th>
                  <th scope="col">rating_standard</th>
                  <th scope="col">rating_rapid</th>
                  <th scope="col">rating_blitz</th>
              </tr>
              </thead>
            {{#airlineInfo}}
                <tr><td>{{year}}</td><td>{{month}}</td><td>{{last_name}}</td><td>{{first_name}}</td><td>{{rating_standard}}</td><td>{{rating_rapid}}</td><td>{{rating_blitz}}</td></tr>
            {{/airlineInfo}}
         </table>
        </div>


        <div class="row justify-content-center">
            <h1>Speed layer: Live Data Below</h1>
        </div>

        <div class="row justify-content-center">
            <table class="table table-striped" style="width:100%;margin:auto;">
                <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">last_name</th>
                    <th scope="col">first_name</th>
                    <th scope="col">rating_standard</th>
                    <th scope="col">rating_rapid</th>
                    <th scope="col">rating_blitz</th>
                </tr>
                </thead>
                <tr><td>{{ID}}</td><td>{{last_name}}</td><td>{{first_name}}</td><td>{{rating_standard_curr}}</td><td>{{rating_rapid_curr}}</td>
                    <td>{{rating_blitz_curr}}</td></tr>
            </table>
        </div>

        <div class="row justify-content-center">
            <table class="table table-striped" style="width:100%;margin:auto;">
                <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">games_count</th>
                </tr>
                </thead>
                <tr><td>{{ID}}</td><td>{{games_count}}</td></tr>
            </table>
        </div>


    </div>



    </div>

</body>
